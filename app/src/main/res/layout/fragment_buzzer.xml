<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.algorythmsteam.algorythms.BuzzerFragment">

    <ImageView
        android:id="@+id/buzzer_background_grid"
        android:alpha="0"
        android:src="@drawable/game_desc_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="270dp"
        android:layout_height="370dp" />

    <RelativeLayout
        android:id="@+id/anchor_layout"
        android:layout_centerInParent="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageButton
        android:id="@+id/buzzer"
        android:alpha="0"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_below="@+id/anchor_layout"
        android:src="@drawable/buzzer"
        android:layout_width="wrap_content"
        android:layout_height="200dp" />

    <ImageView
        android:id="@+id/buzzer_title"
        android:layout_marginBottom="30dp"
        android:alpha="0"
        android:layout_centerInParent="true"
        android:src="@drawable/buzzer_title"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>
