<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlgoryhmsMainActivityFragment"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/splash_screen_background_grid"
        android:alpha="0"
        android:src="@drawable/background_grid"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="-40dp"/>

    <ImageView
        android:rotationY="270"
        android:id="@+id/splash_screen_app_icon"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/splash_icon"/>

    <ImageButton
        android:id="@+id/splash_screen_nfc_scan_button"
        android:alpha="0"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/splash_screen_app_icon"
        android:src="@drawable/nfc_scan_button"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/splash_screen_nfc_description"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/splash_screen_app_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:alpha="0"
        android:background="@drawable/red_button_empty"
        android:text="@string/main_screen_nfc_description"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="@android:color/white"/>

    <ImageButton
        android:id="@+id/splash_screen_qr_scan_button"
        android:alpha="0"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@+id/splash_screen_nfc_scan_button"
        android:layout_alignBottom="@+id/splash_screen_nfc_scan_button"
        android:src="@drawable/qr_button"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/splash_screen_qr_description"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blue_button_empty"
        android:gravity="center"
        android:textSize="14dp"
        android:alpha="0"
        android:text="@string/main_screen_qr_description"
        android:layout_toLeftOf="@+id/splash_screen_nfc_scan_button"
        android:layout_alignBottom="@+id/splash_screen_nfc_scan_button"/>

    <ImageButton
        android:id="@+id/splash_screen_about_button"
        android:alpha="0"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/splash_screen_nfc_scan_button"
        android:layout_alignBottom="@+id/splash_screen_qr_scan_button"
        android:src="@drawable/about_button"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <TextView
        android:id="@+id/splash_screen_tip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_screen_nfc_scan_button"
        android:layout_marginTop="20dp"
        android:alpha="0"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/algorythms_red"
        android:text="tip:"/>

    <TextView
        android:id="@+id/splash_screen_tip_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Press the question mark button for buttons description"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:alpha="0"
        android:layout_below="@id/splash_screen_tip_title"/>


</RelativeLayout>
