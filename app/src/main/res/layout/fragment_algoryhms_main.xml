<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlgoryhmsMainActivityFragment"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/splash_screen_background_grid"
        android:src="@drawable/background_grid"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="-40dp"/>

    <ImageView
        android:rotationY="270"
        android:id="@+id/splash_screen_app_icon"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/splash_icon"/>

    <ImageButton
        android:alpha="0"
        android:id="@+id/splash_screen_nfc_scan_button"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/splash_screen_app_icon"
        android:src="@drawable/nfc_scan_button"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <ImageButton
        android:alpha="0"
        android:id="@+id/splash_screen_qr_scan_button"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@+id/splash_screen_nfc_scan_button"
        android:layout_alignBottom="@+id/splash_screen_nfc_scan_button"
        android:src="@drawable/qr_button"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <ImageButton
        android:alpha="0"
        android:id="@+id/splash_screen_about_button"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/splash_screen_nfc_scan_button"
        android:layout_alignBottom="@+id/splash_screen_qr_scan_button"
        android:src="@drawable/about_button"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:alpha="0"
        android:id="@+id/splash_screen_nfc_description"
        android:text="Scan Game Cards (NFC)"
        android:textSize="15dp"
        android:textColor="@color/algorythms_red"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splash_screen_nfc_scan_button"/>

    <TextView
        android:alpha="0"
        android:id="@+id/splash_screen_qr_description"
        android:text="Scan QR-Codes (Camera)"
        android:textSize="15dp"
        android:textColor="@color/algorythms_blue"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/splash_screen_nfc_description"
        android:layout_below="@id/splash_screen_nfc_scan_button"/>

</RelativeLayout>
