<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.algorythmsteam.algorythms.BubbleSortInstructionsFragment">

    <ImageView
        android:alpha="0"
        android:id="@+id/bubble_sort_instructions_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingRight="-100dp"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/game_desc_background"/>

    <LinearLayout
        android:id="@+id/bubble_sort_instructions_buttons_holder"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/bubble_sort_instructions_back_button"
            android:background="@android:color/transparent"
            android:alpha="0"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/back_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="13dp"/>

        <ImageButton
            android:id="@+id/bubble_sort_instructions_nfc_button"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/nfc_scan_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="13dp"
            android:animateLayoutChanges="true">

            <ImageButton
                android:id="@+id/bubble_sort_instructions_next_button"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:alpha="0"
                android:scaleType="fitCenter"
                android:src="@drawable/play_button"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <ImageView
                android:id="@+id/bubble_sort_instructions_next_disabled"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/next_button_grey"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="gone"/>

        </FrameLayout>


    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/bubble_sort_instructions_cards_scroller"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_above="@id/bubble_sort_instructions_buttons_holder"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:id="@+id/bubble_sort_instructions_cards_holder"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:animateLayoutChanges="true"/>
        
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/bubble_sort_instructions_extra_content_holder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/bubble_sort_instructions_buttons_holder"
        android:layout_marginBottom="40dp">

        <ImageView
            android:id="@+id/bubble_sort_instructions_phone_icon"
            android:alpha="0"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/bubble_sort_instructions_title"
        android:alpha="0"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_marginTop="17dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:src="@drawable/bubble_sort_title"/>
    
    <TextView
        android:id="@+id/bubble_sort_instructions_text1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:gravity="center"
        android:layout_below="@id/bubble_sort_instructions_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="text1"
        android:textSize="22dp"
        android:textColor="@color/algorythms_red"/>

    <TextView
        android:id="@+id/bubble_sort_instructions_text2"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:gravity="center"
        android:layout_below="@id/bubble_sort_instructions_text1"
        android:layout_centerHorizontal="true"
        android:text="text2"
        android:textSize="22dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/algorythms_blue"/>

    <TextView
        android:id="@+id/bubble_sort_instructions_text3"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:gravity="center"
        android:layout_above="@id/bubble_sort_instructions_buttons_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="text3"
        android:textSize="22dp"
        android:textColor="@color/algorythms_blue"/>

</RelativeLayout>
